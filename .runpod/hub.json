{
  "name": "qwen3-tts-runpod",
  "description": "Qwen3-TTS Voice Cloning Serverless",
  "type": "serverless",
  "category": "audio",
  "config": {
    "runsOn": "GPU",
    "containerDiskInGb": 30
  },
  "input": {
    "text": {
      "name": "Text",
      "type": "string",
      "description": "Text to convert to speech",
      "required": true
    },
    "ref_audio_base64": {
      "name": "Reference Audio",
      "type": "string",
      "description": "Base64 encoded reference audio for voice cloning"
    },
    "ref_text": {
      "name": "Reference Text",
      "type": "string",
      "description": "Text spoken in reference audio (improves quality)"
    },
    "language": {
      "name": "Language",
      "type": "string",
      "description": "Language (Russian, English, etc.)",
      "default": "Russian"
    }
  }
}
